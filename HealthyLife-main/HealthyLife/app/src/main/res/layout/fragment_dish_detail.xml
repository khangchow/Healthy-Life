<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dishDetailFragment"
    android:background="@drawable/gradient_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/DishDetailImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center|top"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="35sp"
            android:fontFamily="@font/custom_font"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:id="@+id/DishDetailName"/>
        <TextView
            android:layout_marginTop="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="25sp"
            android:fontFamily="@font/custom_font"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DiscriptionContent"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:id="@+id/DishDetailDescriptionContent"/>
        <TextView
            android:layout_marginTop="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tutorial"
            android:textSize="25sp"
            android:fontFamily="@font/custom_font"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TutorialContent"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:id="@+id/DishDetailTutorialContent"/>
        <TextView
            android:layout_marginTop="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note"
            android:textSize="25sp"
            android:fontFamily="@font/custom_font"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NoteContent"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:id="@+id/DishDetailNoteContent"/>
        <TextView
            android:layout_marginTop="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:textSize="25sp"
            android:fontFamily="@font/custom_font"
            android:textColor="@color/white" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IngredientsContent"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:id="@+id/DishDetailIngredientsContent"/>
        <TextView
            android:layout_marginTop="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Online tutorial video"
            android:textSize="25sp"
            android:fontFamily="@font/custom_font"
            android:textColor="@color/white" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:text="@string/click_here"
            android:id="@+id/DishDetailVideo"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:clickable="true"
            android:focusable="true"
            />
    </LinearLayout>
</ScrollView>