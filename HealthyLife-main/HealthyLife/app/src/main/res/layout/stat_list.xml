<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/custom_stat_table"
    android:padding="20dp"
    android:id="@+id/parent">

    <me.grantland.widget.AutofitTextView
        android:id="@+id/tvHeightTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLines="1"
        android:fontFamily="@font/custom_font"
        android:text="Height: "
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline1"
        android:textAllCaps="true"/>

    <me.grantland.widget.AutofitTextView
        android:id="@+id/tvHeight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLines="1"
        android:fontFamily="@font/custom_font"
        android:text="173cm"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        />

    <me.grantland.widget.AutofitTextView
        android:id="@+id/tvWeightTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLines="1"
        android:fontFamily="@font/custom_font"
        android:text="Weight: "
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvWeight"
        app:layout_constraintEnd_toEndOf="@id/guideline1"
        android:textAllCaps="true"/>

    <me.grantland.widget.AutofitTextView
        android:id="@+id/tvWeight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLines="1"
        android:fontFamily="@font/custom_font"
        android:text="73kg"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintTop_toBottomOf="@id/tvHeight"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        android:layout_marginTop="10dp"
        />

    <me.grantland.widget.AutofitTextView
        android:id="@+id/tvBmiTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLines="1"
        android:fontFamily="@font/custom_font"
        android:text="BMI: "
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvBmi"
        app:layout_constraintEnd_toEndOf="@id/guideline1"
        android:textAllCaps="true"/>

    <me.grantland.widget.AutofitTextView
        android:id="@+id/tvBmi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLines="1"
        android:fontFamily="@font/custom_font"
        android:text="18kg/m2"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintTop_toBottomOf="@id/tvWeight"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        android:layout_marginTop="10dp"/>

    <me.grantland.widget.AutofitTextView
        android:id="@+id/tvDateTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLines="1"
        android:fontFamily="@font/custom_font"
        android:text="Date: "
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvDate"
        app:layout_constraintEnd_toEndOf="@id/guideline1"
        android:textAllCaps="true"/>

    <me.grantland.widget.AutofitTextView
        android:id="@+id/tvDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLines="1"
        android:fontFamily="@font/custom_font"
        android:text="09/04/2021 20:57:00"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintTop_toBottomOf="@id/tvBmi"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        android:layout_marginTop="10dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.8"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.25"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete"
        app:layout_constraintStart_toStartOf="@id/guideline2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/custom_delete_btn"
        android:padding="10dp"
        android:id="@+id/ibDelete"/>

</androidx.constraintlayout.widget.ConstraintLayout>