<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.tablayoutviewpager2.homefragment.AboutFitness"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/gradient_background">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/purple_500">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="130dp"
                android:layout_height="125dp"
                android:src="@drawable/timer_demo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.3"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/custom_font"
                android:text="Feature: Exercise Timer"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/tvLevel"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/image"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description: "
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@id/image"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:id="@+id/tvLevel"
                android:fontFamily="@font/custom_font"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Train together with a recommended\n list of exercise. Want to start?"
                app:layout_constraintStart_toEndOf="@id/image"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tvLevel"
                android:layout_marginStart="10dp"
                android:textSize="14sp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/purple_500">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="130dp"
                android:layout_height="125dp"
                android:src="@drawable/exerciselist_demo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.3"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tvName2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/custom_font"
                android:text="Feature: Exercise List"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/tvLevel2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/image2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description: "
                app:layout_constraintStart_toEndOf="@id/image2"
                app:layout_constraintTop_toBottomOf="@id/tvName2"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:id="@+id/tvLevel2"
                android:fontFamily="@font/custom_font"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A list of exercises customized for you\nbased on BMI! Let's WORK OUT"
                app:layout_constraintStart_toEndOf="@id/image2"
                app:layout_constraintTop_toBottomOf="@id/tvLevel2"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:textSize="13sp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/purple_500">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/image3"
                android:layout_width="130dp"
                android:layout_height="125dp"
                android:src="@drawable/breathe_demo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.3"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tvName3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/custom_font"
                android:text="Feature: Breathe"
                android:textSize="18sp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@id/tvLevel3"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/image3"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description: "
                app:layout_constraintStart_toEndOf="@id/image3"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tvName3"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:id="@+id/tvLevel3"
                android:fontFamily="@font/custom_font"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set aside a few minutes a day to relax\nand focus on your breathing"
                app:layout_constraintStart_toEndOf="@id/image3"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tvLevel3"
                android:layout_marginStart="10dp"
                android:textSize="13sp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/purple_500">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <ImageView
                android:id="@+id/image4"
                android:layout_width="130dp"
                android:layout_height="125dp"
                android:src="@drawable/standup_demo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.3"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tvName4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/custom_font"
                android:text="Feature: Stand-up Noti"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/tvLevel4"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/image4"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description: "
                app:layout_constraintStart_toEndOf="@id/image4"
                app:layout_constraintTop_toBottomOf="@id/tvName4"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:id="@+id/tvLevel4"
                android:fontFamily="@font/custom_font"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remind you to get up and stretch your\nlegs every hour"
                app:layout_constraintStart_toEndOf="@id/image4"
                app:layout_constraintTop_toBottomOf="@id/tvLevel4"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:textSize="13dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/purple_500">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/feature5"
            >

            <ImageView
                android:id="@+id/image5"
                android:layout_width="130dp"
                android:src="@drawable/bmi_demo"
                android:layout_height="125dp"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.3" />

            <TextView
                android:id="@+id/tvName5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/custom_font"
                android:text="Feature: BMI Statistics"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/tvLevel5"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/image5"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description: "
                app:layout_constraintStart_toEndOf="@id/image5"
                app:layout_constraintTop_toBottomOf="@id/tvName5"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:textSize="18sp"
                android:id="@+id/tvLevel5"
                android:fontFamily="@font/custom_font"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Where all of your BMIs are stored for\nlooking back"
                app:layout_constraintStart_toEndOf="@id/image5"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tvLevel5"
                android:layout_marginStart="10dp"
                android:textSize="13sp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>